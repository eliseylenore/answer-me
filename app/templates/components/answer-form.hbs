{{#if addNewAnswer}}
<h1>New Review</h1>
  <div>
    <form>
      <div class="form-group">
        <label for="author">Your Name</label>
        {{input value=author id="author" placeholder="Your name goes here"}}
      </div>
      <div class="form-group">
        <label for="response">Your answer</label>
        {{input value=response id="response" placeholder="Please be thoughtful and helpful"}}
      </div>
      <button {{action 'saveAnswer'}}>Submit</button>
    </form>
  </div>
{{else}}
  <button {{action 'answerFormShow'}}>New Answer</button>
{{/if}}
